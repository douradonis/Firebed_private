# Flask Configuration
FLASK_SECRET=your-super-secret-key-change-this-in-production
FLASK_ENV=development

# Firebase Configuration
# 1. Download service account key from Firebase Console
# 2. Save to file (e.g., firebase-key.json)
# 3. Set path below
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-key.json

# Firebase Realtime Database URL (from Firebase Console)
FIREBASE_DATABASE_URL=https://your-project-name.firebaseio.com

# Firebase API Key (from Firebase Console)
FIREBASE_API_KEY=your-firebase-api-key

# Encryption Configuration
# Generate with: python -c "from encryption import generate_encryption_key; print(generate_encryption_key())"
MASTER_ENCRYPTION_KEY=your-base64-encoded-fernet-key-here

# Optional: Custom encryption salt (default is provided)
ENCRYPTION_SALT=firebed-custom-salt-change-me

# Admin Configuration
# Set to the user ID of your admin account (e.g., 1)
ADMIN_USER_ID=1

# Database Configuration (optional)
DATABASE_URL=sqlite:///firebed.db

# Email Configuration (SMTP)
# For Gmail:
#   1. Enable 2-step verification in your Google Account
#   2. Create an App Password at https://myaccount.google.com/apppasswords
#   3. Use the generated password below
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SENDER_EMAIL=your-email@gmail.com

# For other providers (e.g., SendGrid, Mailgun, etc.):
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SENDER_EMAIL=your-email@example.com

# Application URL (used in email links for verification and password reset)
# APP_URL=http://localhost:5000

# MyData Configuration (if using MyData API)
AADE_USER_ID=your-aade-user-id
AADE_SUBSCRIPTION_KEY=your-aade-subscription-key
MYDATA_ENV=sandbox  # or production

# Server Configuration (optional)
RENDER_EXTERNAL_URL=http://localhost:5000
PUBLIC_BASE_URL=http://localhost:5000
